<h3>CSS文件</h3>


<div class="pageblock">
  <h5>CSS列表(css) <a href="#" id="create_css_btn" class="btn btn-inverse btn-sm"><span class="fui-plus"></span> 新建CSS</a></h5>
  <div id="csslist">
      <table class="table table-striped table-hover table-vam">
    <thead>
      <tr>
        <th>文件名</th>
        <th>创建时间</th>
        <th>修改时间</th>
        <th>大小</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      {{#each cssBasePage}}
      <tr>
        <td><strong>{{filename}}</strong></td>
        <td>{{showTime ctime}}</td>
        <td>{{showTime mtime}}</td>
        <td>{{showFileSize size}}</td>
        <td>
          <a href="/preview/css/{{name}}.css" target="_blank" class="btn 
          btn-primary btn-sm"><span class="fui-eye"></span> 预览</a>
          <a href="/codeview?path={{path}}" target="_blank" class="btn btn-success btn-sm"><span class="fui-document"></span> 源代码</a>
          {{!-- <a href="javascript:;" data-filepath="{{path}}" class="btn btn-danger btn-sm delete_css_btn"><span class="fui-cross"></span> 删除</a> --}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>

<div class="modal fade" id="create_css_template">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">新建css页</h4>
        </div>
        <form action="" id="create_css_form">
          <div class="modal-body">

            <div class="form-group">
                <label class="control-label" for="css_name">CSS文件名称 <span class="required">*</span> <span class="glyphicon glyphicon-info-sign"  data-toggle="tooltip" data-placement="right" data-original-title="只能使用英文数字和下划线减号做文件名"></span></label>
                <input class="form-control" id="css_name" type="text" pattern="[A-z0-9_-]+" required>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-primary submitbtn">确定</button>
          </div>
        </form>
      </div>
    </div>
  </div>


<div class="pageblock">
  <h5>局部CSS列表(css/_partial) <a href="#" id="create_partial_css_btn" class="btn btn-inverse btn-sm"><span class="fui-plus"></span> 新建局部CSS</a></h5>
  <div id="partial_csslist">
      <table class="table table-striped table-hover table-vam">
        <thead>
        <tr>
            <th>文件名</th>
            <th>创建时间</th>
            <th>修改时间</th>
            <th>大小</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each cssPartialPage}}
        <tr>
            <td><strong>{{filename}}</strong>
            {{#if is_system_file}}
                <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="right" data-original-title="系统自动生成的Less文件，在其他Less文件引用后即可生效"></span>
            {{/if}}
            </td>
            <td>{{showTime ctime}}</td>
            <td>{{showTime mtime}}</td>
            <td>{{showFileSize size}}</td>
            <td>
            <a href="/codeview?path={{path}}" target="_blank" class="btn btn-success btn-sm"><span class="fui-document"></span> 源代码</a>
            {{#if is_system_file}}
            {{else}}
            {{!-- <a href="javascript:;" data-filepath="{{path}}" class="btn btn-danger btn-sm delete_css_partial_btn"><span class="fui-cross"></span> 删除</a> --}}
            {{/if}}    
                    
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="create_partial_css_template">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">新建css布局页</h4>
        </div>
        <form action="" id="create_partial_css_form">
          <div class="modal-body">

            <div class="form-group">
                <label class="control-label" for="partial_css_name">CSS文件名称 <span class="required">*</span> <span class="glyphicon glyphicon-info-sign"  data-toggle="tooltip" data-placement="right" data-original-title="只能使用英文数字和下划线减号做文件名"></span></label>
                <input class="form-control" id="partial_css_name" type="text" pattern="[A-z0-9_-]+" required>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="submit" class="btn btn-primary submitbtn">确定</button>
          </div>
        </form>
      </div>
    </div>
  </div>


{{#extend "bodybottom"}}
<script src="/js/page_css.js"></script>
{{/extend}}